<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Inventory App</title>
  </head>
  <body>
    <h1>Pokemons data:</h1>
    <ul>
      <% pokemons.forEach((row) => { %>
      <li>
        <% for (let key in row) { %>
        <div><%= key%>: <%= row[key] %></div>
        <% } %>

        <a href="/pokemons/edit/<%= row.id %>"> Edit</a>

        <form action="/pokemons/delete/<%= row.id %>" method="post">
          <button
            type="submit"
            onclick="return confirm('Are you sure you want to delete this pokemon ?')"
          >
            Delete
          </button>
        </form>
      </li>
      <% }); %>
    </ul>
    <a href="/pokemons/new">Add new pokemon</a>
    <a href="/">Back to main page</a>
  </body>
</html>
