<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Inventory App</title>
    <link rel="stylesheet" href="/styles.css" />
    <link rel="icon" type="image/svg+xml" href="/assets/pika.svg" />
  </head>
  <body>
    <h1 class="mainTitle">Trainers data</h1>
    <ul class="dataList">
      <% trainers.forEach((row) => { %>
      <li class="dataContent">
        <div class="contentImg">
          <img src="/assets/trainer.png" alt="trainer" />
        </div>
        <div class="trainerData">
          <% for (let key in row) { %>
          <div><strong><%= key%>:</strong> <%= row[key] %></div>
          <% } %>
        </div>
        <div class="dataActions">
          <form action="/trainers/delete/<%= row.id %>" method="post">
            <button
              class="deleteBtn"
              type="submit"
              onclick="return confirm('Are you sure you want to delete this trainer ?')"
            >
              Delete
            </button>
          </form>
          <a href="/trainers/edit/<%= row.id %>"
            ><button class="editBtn">Edit</button></a
          >
        </div>
      </li>
      <% }); %>
    </ul>
    <div class="pageActions">
      <a href="/"><button>&#8592; Back to main page</button></a>
      <a href="/trainers/new"><button>&#43; Add new trainer</button></a>
    </div>
  </body>
</html>
